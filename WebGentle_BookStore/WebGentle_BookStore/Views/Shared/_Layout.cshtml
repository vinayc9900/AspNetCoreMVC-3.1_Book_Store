<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title> @ViewData["Title"] | Book Store Appliacation</title>
    <environment include="Development">
        <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        @*<link href="~/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />*@
        <link rel="stylesheet" href="http://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
              asp-fallback-href="~/twitter-bootstrap/css/bootstrap.min.css" 
              asp-fallback-test-class="sr-only"
              asp-fallback-test-property="position"
              asp-fallback-test-value="absolute"
              integrity="" crossorigin="anonymous">
        
    </environment>
  
    <link href="~/css/Site.css" rel="stylesheet" />
</head>
<body>

    <header>
        <div class="container">
            <nav class="navbar navbar-expand-md fixed-top bg-light shadow">

                <a class="navbar-brand" href="#">
                    <img src="~/images/books/book2.jpg" width="30" height="30" asp-append-version="true" class="rounded-pill" />
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-sm-inline-flex" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item active">
                            <a class="nav-link" href="#">Home <span class="sr-only"></span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="AboutUs">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="ContactUs">Contact Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Book" asp-action="GetAllBooks">View Books</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Book" asp-action="AddNewBook">Add New Book</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-protocol="http" asp-host="webgentle.com" asp-controller="Book" asp-action="GetAllBooks">New URL Link</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="#">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Register</a>
                        </li>
                    </ul>

                </div>
            </nav>
        </div>


    </header>
    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>
   
        <footer class="footer text-center fixed-bottom">
            <div class="container">
                Copyright &copy; Book Store Application- @DateTime.Now.Year
                <custom-email my-email="nitish@webgentle.com"></custom-email>
            </div>
          
        </footer>
        <environment include="Development">
            <script src="~/lib/jquery/jquery.js"></script>
            <script src="~/Jquery-validate/jquery.validate.js"></script>
            <script src="~/Jquery-validate-unobtructive/jquery.validate.unobtrusive.js"></script>
            <script src="~/Jquery-ajax-unobtrusive/jquery-unobtrusiive-ajax.js"></script>
        </environment>
        <environment exclude="Development">
            <script src="~/lib/jquery/jquery.min.js"></script>
            <script src="~/Jquery-validate/jquery.validate.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
            <script src="~/Jquery-ajax-unobtrusive/jquery-unobtrusiive-ajax.min.js"></script>
        </environment>


   @*For carousel*@
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    
    @RenderSection("scripts", required: false)
</body>

</html>
