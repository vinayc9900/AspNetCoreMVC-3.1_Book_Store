@using WebGentle_BookStore.Enums
@model BookModel

<div>
    <div class="container">
        <h4 class="display-4">Add New Book</h4>
        @if (ViewBag.isSuccess == true)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>Congratulations!  </strong> You have added New Book Successfully..<br />
                Click <a asp-controller="Book" asp-action="GetBook" asp-route-id="@ViewBag.bookId"> here</a> to view details.
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        <div class="d-flex justify-content-center">
            <div class="spinner-border" role="status" id="myLoader" style="display:none;">
                <span class="sr-only">Loading...</span>
            </div>
        </div>

        
