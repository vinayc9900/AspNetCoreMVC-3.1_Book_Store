                <label asp-for="Language"></label>
                <select asp-for="Language" class="form-control">
                    <option value="">Please choose Language</option>
                    <option value="English" selected>English (Global Language)</option> // Default Selected
                    <option value="Kannada">Kannada (State Language)</option>
                    <option value="Hindi">Hindi (National Language)</option>
                </select>
                <span asp-validation-for="Language" class="text-danger"></span>
            </div>
            @*Dropdown values using selectList,selectListItem,SelectListGroup*@


            @*Dropdown values using Enum *@
            @*<label asp-for="EnumLanguage"></label>
            <select asp-for="EnumLanguage" class="form-control" asp-items="Html.GetEnumSelectList<EnumLanguage>()" >
                <option value="">Please choose Language</option>
            </select>
            <span asp-validation-for="EnumLanguage" class="text-danger"></span>*@

            @*Dropdown values using MultipleLanguageSelect
