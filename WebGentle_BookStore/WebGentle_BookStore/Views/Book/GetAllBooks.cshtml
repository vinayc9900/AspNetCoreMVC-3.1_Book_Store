<div>
    <div class="container">
        <h1 class="display-4">All Books </h1>
        <div class="row">
            @foreach (var book in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        @*<svg class="bd-placeholder-img  card-img-top" width="100%" height="50" style="background-color:cornflowerblue"></svg>*@
                       <img src="@book.CoverImageUrl" class="img-thumbnail" />
                        <div class="card-body">
                            <h3 class="card-title">@book.Title</h3>
                            <p class="card-text">@book.Description</p>

                            <div class="d-flex justify-content-between align-content-center">
                                <div class="btn-group">
                                    @*<a href="/Book/GetBook/@book.Id" class="btn btn-sm btn-outline-secondary">View Details...</a>*@

                                    <a asp-route="bookDetailsRoute" asp-route-id="@book.Id" 
                                       class="btn btn-sm btn-outline-secondary">View Details...</a>

                                    @*<a asp-controller="Book" asp-action="GetBook" asp-route-id="@book.Id" asp-fragment="similarBooks"
                                       class="btn btn-sm btn-outline-secondary">View Details...</a>*@

                                    @* We can Use Multiple parameters-  asp-route-id="@book.Id" ,   asp-route-bookName="@book.Title"
                                     For multiple parameters use this -   asp-all-route-data="@parameters"

                                    *@
                                </div>
                                <small class="text-muted">@book.Author</small>
                            </div>
                        </div>
                    </div>

                </div>
            }
        </div>
    </div>
</div>